@model IEnumerable<ZavenDotNetInterview.App.ViewModels.Jobs.IndexViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Index</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-success" })
            @using (Html.BeginForm("Process", "Jobs", FormMethod.Post, new { @class = "btn" }))
            {
                <input type="submit" class="btn btn-danger" value="Process" />
            }
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th></th>
        </tr>

        @foreach (var job in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => job.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => job.Status)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { jobId = job.Id })
                </td>
            </tr>
        }
    </table>
</div>